# /etc/strongswan.conf - client logging/plugins

charon {
    load_modular = yes
    dns1 1.1.1.1
    dns2 9.9.9.9
    filelog {
        /var/log/strongswan/charon.log {
            time_format = %b %e %T
            default = 1
            flush_line = yes
        }
    }
}

libstrongswan {
    plugins {
        attr = yes
        eap-mschapv2 = yes
        eap-ttls = yes
        x509 = yes
        pem = yes
        pkcs1 = yes
        gmp = yes
    }
}
